    <script>
function blueFunction() {
   var element = document.body;
   element.classList.toggle("blue-mode");
}
</script>
    <script>
    var pages = document.getElementsByClassName("page");
    var pageLinks = document.getElementsByTagName("a");
        var page = function(thepage){
            for (var i = 0; i < pages.length;i++){
                pages[i].style.display = "none";
            }
            for (var j = 0; j < pageLinks.length;j++){
                pageLinks[j].classList.remove("current");
            }
            document.getElementById(thepage).style.display = "block";
            document.getElementById(thepage+"Link").classList.add("current");
            document.body.scrollTop = document.documentElement.scrollTop = 0;
            
        };
        page("home");
    </script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.11"></script>
        <script>
            var options = {
                strings: ["Programming With Passion"],
                typeSpeed: 120,
                loop: !1
            };
            new Typed('#text-rotate', options);
        </script>
        <script type='application/javascript'>
    
        var scenes = document.getElementsByClassName('page');
      
        function showPage(index) {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
        for (var i = 0; i < scenes.length; i++) {
          scenes[i].style.display = 'none';
        }
        scenes[index].style.display = 'block';
        window.scrollTo({
          top: 0,
          behavior: "smooth"
        });
      };
      
        function slightScroll() {
        window.scrollTo({
          top: 350,
          behavior: "smooth"
        });
      };
      
        function backToTop() {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        })
      };
      
        function slightScroll() {
        window.scrollTo({
          top: 350,
          behavior: "smooth"
        });
      };
      
    </script>
